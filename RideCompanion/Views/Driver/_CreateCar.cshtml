@model RideCompanion.ViewModels.DriverViewModel

<div class="offcanvas offcanvas-start" tabindex="-1" id="createCar" aria-labelledby="createCarLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="createCarLabel">Create car</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div>
            Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
        </div>
        <div>
            <form method="post" asp-controller="Driver" asp-action="CreateCar">
                <div class="mb-3">
                    <label asp-for="@Model.CarDto.Number" class="form-label">Number</label>
                    <input asp-for="@Model.CarDto.Number" type="text" class="form-control">
                    <div class="form-text">Number</div>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CarDto.Color" class="form-label">Color</label>
                    <input asp-for="@Model.CarDto.Color" type="text" class="form-control">
                    <div class="form-text">Color</div>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CarDto.Model" class="form-label">Model</label>
                    <input asp-for="@Model.CarDto.Model" type="text" class="form-control">
                    <div class="form-text">Model</div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>